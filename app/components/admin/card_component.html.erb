<div class="card">
  <div class="card-header">
    <h3 class="card-title font-weight-bold text-uppercase">
      <% if title.present? %>
        <%= title %>
      <% end %>

      <% if subtitle.present? %>
        <span class="badge badge-secondary"><%= subtitle %></span>
      <% end %>
    </h3>
  </div>
  <div class="card-body">
    <%= content %>
  </div>
  <div class="card-footer bg-transparent border-top">
    <div class="row justify-content-end">
        <div class="col-6 col-sm-6 col-md-2">
          <%= link_to back_url, class: 'btn btn-dark btn-block text-uppercase font-weight-bold' do %>
            <i class="fas fa-backward"></i> Voltar
          <% end %>
        </div>
      </div>
  </div>
</div>