<% content_for :breadcrumb do %>
  <%= render Admin::BreadcrumbComponent.new do |component| %>
    <% component.with_title do %> 
      <i class="fas fa-pills"></i> Vermífugos
    <% end %>
    <% component.with_link(name: 'Vermífugos', link: admin_vermifugos_path) %>
    <% component.with_link(name: 'Editar Vermífugo', link: '#') %>
  <% end %>
<% end %>

<%= 
  render partial: 'form', locals: {
    title: 'Vermífugo',
    subtitle: 'Edição',
    action: update_admin_vermifugos_path(@vermifugo),
    method: 'put',
    model: @vermifugo,
    back_url: admin_vermifugos_path,
    submit_text: 'Atualizar'
  } 
%>