<% content_for :breadcrumb do %>
  <%= render Admin::BreadcrumbComponent.new do |component| %>
    <% component.with_title do %> 
      <i class="fas fa-user-tie"></i> Agendamentos
    <% end %>
    <% component.with_link(name: 'Agendamentos', link: admin_agendamentos_path) %>
    <% component.with_link(name: 'Editar Agendamento', link: '#') %>
  <% end %>
<% end %>

<%= 
  render partial: 'form', locals: {
    title: 'Agendamento',
    subtitle: 'Edição',
    action: update_admin_agendamentos_path(@agendamento),
    method: 'put',
    model: @agendamento,
    back_url: admin_agendamentos_path,
    submit_text: 'Atualizar'
  } 
%>
