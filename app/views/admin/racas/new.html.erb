<% end %>

<%= 
  render partial: 'form', locals: {
    title: 'Raça',
    subtitle: 'Novo',
    action: create_admin_racas_path,
    method: 'POST',
    model: @raca,
    back_url: admin_racas_path,
    submit_text: 'Salvar'
  } 
%>