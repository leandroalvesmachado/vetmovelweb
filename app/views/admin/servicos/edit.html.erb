<% content_for :breadcrumb do %>
  <%= render Admin::BreadcrumbComponent.new do |component| %>
    <% component.with_title do %> 
      <i class="fas fa-pills"></i> Serviços
    <% end %>
    <% component.with_link(name: 'Serviços', link: admin_servicos_path) %>
    <% component.with_link(name: 'Editar Serviço', link: '#') %>
  <% end %>
<% end %>

<%= 
  render partial: 'form', locals: {
    title: 'Serviço',
    subtitle: 'Edição',
    action: update_admin_servicos_path(@servico),
    method: 'put',
    model: @servico,
    back_url: admin_servicos_path,
    submit_text: 'Atualizar'
  } 
%>