<% content_for :breadcrumb do %>
  <%= render Admin::BreadcrumbComponent.new do |component| %>
    <% component.with_title do %> 
      <i class="fas fa-bug"></i> Antipulgas
    <% end %>
    <% component.with_link(name: 'Antipulgas', link: admin_antipulgas_path) %>
    <% component.with_link(name: 'Editar Antipulga', link: '#') %>
  <% end %>
<% end %>

<%= 
  render partial: 'form', locals: {
    title: 'Antipulga',
    subtitle: 'Edição',
    action: update_admin_antipulgas_path(@antipulga),
    method: 'put',
    model: @antipulga,
    back_url: admin_antipulgas_path,
    submit_text: 'Atualizar'
  } 
%>