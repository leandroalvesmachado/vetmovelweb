<% content_for :breadcrumb do %>
  <%= render Admin::BreadcrumbComponent.new do |component| %>
    <% component.with_title do %> 
      <i class="fas fa-pills"></i> Pelagens (Cor dos Pelos)
    <% end %>
    <% component.with_link(name: 'Pelagens', link: admin_pelagens_path) %>
    <% component.with_link(name: 'Editar Pelagem', link: '#') %>
  <% end %>
<% end %>

<%= 
  render partial: 'form', locals: {
    title: 'Pelagem',
    subtitle: 'Edição',
    action: update_admin_pelagens_path(@pelagem),
    method: 'put',
    model: @pelagem,
    back_url: admin_pelagens_path,
    submit_text: 'Atualizar'
  } 
%>