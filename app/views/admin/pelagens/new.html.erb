<% content_for :breadcrumb do %>
  <%= render Admin::BreadcrumbComponent.new do |component| %>
    <% component.with_title do %> 
      <i class="fas fa-palette"></i> Pelagens (Cor dos Pelos)
    <% end %>
    <% component.with_link(name: 'Pelagens', link: admin_pelagens_path) %>
    <% component.with_link(name: 'Nova Pelagem', link: '#') %>
  <% end %>
<% end %>

<%= 
  render partial: 'form', locals: {
    title: 'Pelagem',
    subtitle: 'Novo',
    action: create_admin_pelagens_path,
    method: 'POST',
    model: @pelagem,
    back_url: admin_pelagens_path,
    submit_text: 'Salvar'
  } 
%>